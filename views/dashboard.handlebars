<div class='post-container'>
    <h2>{{username}}'s Posts</h2>
    <div>
        <button type='button' id='show-new-post-btn'>Add new post</button>
        <form id='add-post-form'>
            <label for='new-post-title'>Post Title:</label>
            <input type='text' id='new-post-title' />
            <label for='new-post-contents'>Post Contents:</label>
            <textarea id='new-post-contents'></textarea>
            <button id='add-post-btn' type='submit'>Add</button>
        </form>
    </div>
    {{#each posts}}
    <div class='post'>
        <div class='post-title-info'>
            <a href="/edit/{{id}}">
                <h3 class='post-title'>{{post_title}}</h3>
            </a>
            <h4>by {{user.username}} on {{format_date createdAt}}</h4>
        </div>
        <p>{{post_contents}}</p>
    </div>
    {{/each}}
</div>
<script src='/javascript/newPost.js'></script>