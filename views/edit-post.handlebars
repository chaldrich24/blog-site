<div class='post-container'>
    <div class='edit-buttons'>
        <button type="button" id='edit-post-btn'>Edit Post</button>
        <button type="button" id='delete-post-btn'>Delete Post</button>
    </div>
    {{>post-info post}}
    {{#if loggedIn}}
    <form id='add-comment-form'>
        <label for='new-comment'>Add Comment:</label>
        <textarea id='new-comment'></textarea>
        <button id='add-comment-btn' type='submit'>Add</button>
    </form>
    {{/if}}
</div>

<div class='post-container'>
    {{>comment-info post.comments}}
</div>
{{#if loggedIn}}
<script src='/javascript/comment.js'></script>
<script src='/javascript/edit-post.js'></script>
{{/if}}